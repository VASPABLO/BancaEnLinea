@model BancaEnLinea.Models.Transaccion

@{
    ViewData["Title"] = "Editar Transacción";
}

<h2>Editar Transacción</h2>

<form asp-action="Editar" method="post">
    <div class="form-group">
        <label asp-for="ClienteId"></label>
        <input asp-for="ClienteId" class="form-control" />
        <span asp-validation-for="ClienteId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Tipo"></label>
        <input asp-for="Tipo" class="form-control" />
        <span asp-validation-for="Tipo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Monto"></label>
        <input asp-for="Monto" class="form-control" />
        <span asp-validation-for="Monto" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Fecha"></label>
        <input asp-for="Fecha" type="datetime-local" class="form-control" />
        <span asp-validation-for="Fecha" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>


