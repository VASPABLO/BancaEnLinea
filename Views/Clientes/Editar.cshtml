@model BancaEnLinea.Models.Cliente

@{
    ViewData["Title"] = "Editar Cliente";
}

<h2>Editar Cliente</h2>

<form asp-action="Editar" method="post">
    <div class="form-group">
        <label asp-for="Cedula"></label>
        <input asp-for="Cedula" class="form-control" />
        <span asp-validation-for="Cedula" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Apellidos"></label>
        <input asp-for="Apellidos" class="form-control" />
        <span asp-validation-for="Apellidos" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Correo"></label>
        <input asp-for="Correo" class="form-control" />
        <span asp-validation-for="Correo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Telefono"></label>
        <input asp-for="Telefono" class="form-control" />
        <span asp-validation-for="Telefono" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UsuarioId"></label>
        <input asp-for="UsuarioId" class="form-control" />
        <span asp-validation-for="UsuarioId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Saldo"></label>
        <input asp-for="Saldo" class="form-control" />
        <span asp-validation-for="Saldo" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>


