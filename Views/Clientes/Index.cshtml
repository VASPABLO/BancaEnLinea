@model IEnumerable<BancaEnLinea.Models.Cliente>

@{
    ViewData["Title"] = "Clientes";
}

<h2>Clientes</h2>

<p>
    <a asp-action="Crear" class="btn btn-primary">Agregar Cliente</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Cédula</th>
            <th>Nombre</th>
            <th>Apellidos</th>
            <th>Correo</th>
            <th>Teléfono</th>
            <th>Saldo</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model)
        {
            <tr>
                <td>@cliente.Cedula</td>
                <td>@cliente.Nombre</td>
                <td>@cliente.Apellidos</td>
                <td>@cliente.Correo</td>
                <td>@cliente.Telefono</td>
                <td>@cliente.Saldo</td>
                <td>
                    <a asp-action="Editar" asp-route-id="@cliente.Id" class="btn btn-warning">Editar</a>
                    <a asp-action="Borrar" asp-route-id="@cliente.Id" class="btn btn-danger">Borrar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

